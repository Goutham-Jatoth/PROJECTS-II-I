WAP to ask user to input date in DD MM YY format and print calendar of that month


import java.time.LocalDate;
import java.time.YearMonth;
import java.util.Scanner;

public class CalendarPrinter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Ask user to enter date in DD MM YY format
        System.out.print("Enter date (DD MM YY): ");
        int day = sc.nextInt();
        int month = sc.nextInt();
        int year = sc.nextInt();

        // Convert 2-digit year to 4-digit
        if (year < 100) {
            year += 2000;  // assumes years 00–99 mean 2000–2099
        }

        // Create YearMonth instance
        YearMonth yearMonth = YearMonth.of(year, month);
        int daysInMonth = yearMonth.lengthOfMonth();
        LocalDate firstOfMonth = yearMonth.atDay(1);
        int startDay = firstOfMonth.getDayOfWeek().getValue(); // 1 = Monday, 7 = Sunday

        // Print calendar header
        System.out.println("\nCalendar for " + yearMonth.getMonth() + " " + year);
        System.out.println("Mon Tue Wed Thu Fri Sat Sun");

        // Print initial spaces
        for (int i = 1; i < startDay; i++) {
            System.out.print("    ");
        }

        // Print days of the month
        for (int date = 1; date <= daysInMonth; date++) {
            System.out.printf("%3d ", date);
            if ((date + startDay - 1) % 7 == 0) {
                System.out.println(); // new line after Sunday
            }
        }

        System.out.println(); // final newline
    }
}
